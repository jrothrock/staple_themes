.posts-wrapper
  .post
    .post-body
      .image-wrap.row
        = simple_form_for @theme, html: { multipart: true } do |f|
          .row
            .col-10.text-center
              = f.error_notification
          .container-fluid.col.m10.offset-m1
            .form-group.text-center
              %h3 Theme:
            .form-group.text-center.input-field
              = f.input :title, label: 'Theme Title'
            .form-group.text-center.input-field
              = f.input :url, label: 'Theme URL'
            .form-group.text-center.row.picture-upload-area
              %label Pictures
              = f.file_field :photos, multiple: true, id:"upload-theme-input", style:"display:none", accept:".png,.jpg"
              %a#upload-theme-button.btn.upload-theme-button{:href => "#"}
                %i.fa.fa-upload
              .picture-container
                %img#upload-theme-image{style:"height:120px;margin-top:10px;"}
            .form-group.text-center.row.picture-upload-area
              %label Theme Zip
              %input{type:'file', name: 'file', id:"upload-theme-input-zip", style:"display:none", accept:".zip"}
              %a#upload-theme-button-zip.btn.upload-theme-button{:href => "#"}
                %i.fa.fa-upload
              .progress-container
                .progress-bar
                  .inner-progress-bar
                %span.progress-text-container 0
              .file-name
            .col.m12.row
              .col.m6
                .form-group.text-center
                  %label Single Price ($)
                  = f.number_field :single_price, :step => "any"
              .col.m6
                .form-group.text-center
                  %label Single Sale Price ($)
                  = f.number_field :single_sale_price, :step => "any"
            .col.m12.row
              .col.m6
                .form-group.text-center
                  %label Multi Price ($)
                  = f.number_field :multi_price, :step => "any"
              .col.m6
                .form-group.text-center
                  %label Multi Sale Price ($)
                  = f.number_field :multi_sale_price, :step => "any"
            .col.m12.row
              %p{style:"color:#aaa"} Excerpt
              = f.text_area :excerpt
            .col.m12.row
              %p{style:"color:#aaa;"} Description
              = f.text_area :description, id:"markdown-editor"
            .hidden
              = f.input :download_name, class:'hidden'
            .form-group.text-center
              %i#submit-theme-button{class:"btn waves-effect waves-light waves-input-wrapper"}
                %input{value:"Submit Theme", class: 'waves-button-input', type:'submit'}
              = f.button :submit, class: 'btn-success btn-block', id:'submit-theme-hidden', style:'display:none'