.login-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Log in
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = f.error_notification
            .panel-body
              .input-field
                = f.input :email, required: true, autofocus: true, label: false, label: 'Email', input_html: { class: 'input-lg' }
              .input-field
                = f.input :password, required: true, label: false, label: 'Password', input_html: { class: 'input-lg' }
              .input-field
                = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
              .input-field
                = f.button :submit, "Log in", class: 'waves-effect waves-light btn'