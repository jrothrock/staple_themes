.registration-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Update Your Account
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = f.error_notification
            .panel-body
              .input-field
                = f.input :email, required: true, label: 'Email', input_html: { class: 'input-lg' }
              .input-field
                = f.input :current_password, required:true, label: 'Current Password',  input_html: { class: 'input-lg' }
              .input-field
                = f.input :password, required: true, label: 'New Password', input_html: { class: 'input-lg' }
              .input-field
                = f.input :password_confirmation, required: true, label: 'Confirm Password', input_html: { class: 'input-lg' }
              .input-field
                %i#update-registration-button{class:"btn waves-effect waves-light waves-input-wrapper", data:{type:'update-registration'}}
                  %input{value:"Update", class: 'waves-button-input', type:'submit', style:"color:white"}
                = f.button :submit, "Update", id:"submit-input-hidden", class: 'waves-effect waves-light btn', style:'display:none'
                %svg#update-registration-spinner.spinner-circle{:viewbox => "0 0 50 50"}
                  %circle.path{:cx => "25", :cy => "25", :fill => "none", :r => "20", "stroke-width" => "5"}
                
                = link_to "Delete Account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure? This process can't be undone, and you will lose all of your purchases." }, style:'margin-left:50px'