.registration-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Update Your Account
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = f.error_notification
            .panel-body
              .input-field
                = f.input :username, required: true, autofocus: true, label: false, label: 'Username', input_html: { class: 'input-lg' }
              .input-field
                = f.input :email, required: true, label: false, label: 'Email', input_html: { class: 'input-lg' }
              .input-field
                = f.input :password, required: true, label: false, label: 'New Password', input_html: { class: 'input-lg' }
              .input-field
                = f.input :password_confirmation, required: true, label: false, label: 'Confirm Password', input_html: { class: 'input-lg' }
              .input-field
                %i#update-registration-button{class:"btn waves-effect waves-light waves-input-wrapper"}
                  %input{value:"Update", class: 'waves-button-input', type:'submit'}
                = f.button :submit, "Update", id:"submit-input-hidden", class: 'waves-effect waves-light btn', style:'display:none'