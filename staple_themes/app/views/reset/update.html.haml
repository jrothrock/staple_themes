.reset-container.row
    %h4.center
        Reset Password
    .col.m6.offset-m3{style:"margin-top:10px"}
        .input-field
            = text_field_tag :password_reset, '' , {required: true, autofocus: true, type: :password, label: false, label: 'Username or Email', input_html: { class: 'input-lg' }}
            = label_tag :password_reset, 'Password', class:'active'
        .input-field
            = text_field_tag :password_confirmation_reset, '' , {required: true, type: :password, label: false, label: 'Username or Email', input_html: { class: 'input-lg' }}
            = label_tag :password_confirmation_reset, 'Confirm Password', class:'active'
        .input-field
            = text_field_tag :user_uuid, @user.uuid, class:'hidden'
        .input-field.center
            %i#reset-password-confirm-button-modal{class:"btn waves-effect waves-light waves-input-wrapper", data:{type:'reset-password-confirm'}}
                .waves-button-input{style:"font-style:initial"} Update Password
            %svg#reset-password-confirm-spinner.spinner-circle{:viewbox => "0 0 50 50"}
                %circle.path{:cx => "25", :cy => "25", :fill => "none", :r => "20", "stroke-width" => "5"}